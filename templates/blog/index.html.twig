{% extends 'layout.html.twig' %}

{% block title %}Notre Blog{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">
        <i class="fas fa-blog me-2"></i>Notre blog
    </h1>

    <div class="row">
        {% for article in articles %}
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    {% if article.image is defined %}
                        <img src="{{ article.image }}" class="card-img-top" alt="{{ article.title }}">
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark">
                            <i class="fas fa-file-alt me-2 text-warning"></i>{{ article.title }}
                        </h5>
                        <p class="card-text text-muted">{{ article.content|slice(0, 150) ~ '...' }}</p>
                        <a href="{{ path('app_blog_post', { id: article.id }) }}" class="mt-auto btn btn-primary">
                            <i class="fas fa-book-open me-1"></i>Lire l'article
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-circle me-2"></i>Aucun article trouvé.
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="text-center mt-5">
        <a href="{{ path('app_home') }}" class="btn btn-outline-dark">
            <i class="fas fa-arrow-left me-2"></i>Retour à l'accueil
        </a>
    </div>

    {% if views is defined %}
        <div class="text-center my-5">
            <span class="badge bg-dark fs-5 px-4 py-2">
                <i class="fa-solid fa-eye me-2"></i>{{ views }} vues
            </span>
        </div>
    {% endif %}
</div>
{% endblock %}
